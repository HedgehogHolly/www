{
  "version": 2,
  "name": "neontribe-www",
  "alias": ["neontribe.now.sh"],
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public",
        "useBuildUtils": "@now/build-utils@canary"
      }
    }
  ],
  "build": {
    "env": {
      "WORDPRESS_CLIENT_SECRET": "@neon-wp-client-secret",
      "WORDPRESS_CLIENT_ID": "@neon-wp-client-id",
      "WORDPRESS_USER": "@neon-wp-user",
      "WORDPRESS_PASSWORD": "@neon-wp-password"
    }
  },
  "regions": ["bru1"]
}
